<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emsi.mh.mangmenthotel.controller.RegisterController">
   <children>
      <Label text="Create Account">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox maxWidth="300.0" spacing="10.0">
         <children>
            <Label text="First Name" />
            <TextField fx:id="prenomField" />
            <Label text="Last Name" />
            <TextField fx:id="nomField" />
            <Label text="Email" />
            <TextField fx:id="emailField" />
            <Label text="Phone" />
            <TextField fx:id="telephoneField" />
            <Label text="Password" />
            <PasswordField fx:id="passwordField" />
             <Label text="Confirm Password" />
            <PasswordField fx:id="confirmPasswordField" />
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleRegister" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Register">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d;" text="Cancel" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
