<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emsi.mh.mangmenthotel.controller.LoginController">
   <children>
      <Label text="Hotel Login">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox maxWidth="300.0" spacing="10.0">
         <children>
            <Label text="Email" />
            <TextField fx:id="emailField" text="admin@hotel.com" />
            <Label text="Password" />
            <PasswordField fx:id="passwordField" text="admin" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Login">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleRegisterNavigation" style="-fx-background-color: transparent; -fx-text-fill: #2980b9;" text="Create Account" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
